%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag(""), class: "invite" do
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = label_tag :name, "Name"
            .row
              .col-sm-4
                = text_field_tag :name, class: "form-control"
          .form-group
            = label_tag :email, "Friend's Email Address"
            .row
              .col-sm-4
                = email_field_tag :email, class: "form-control"
          .form-group
            = label_tag :message, "Invitation Message"
            .row
              .col-sm-6
                = textarea_field_tag :message, class: "form-control", html: { rows: 6 }
        %fieldset.form-group.action
          = f.submit "Send Invitation", class: "btn btn-default"
