%section.genre
  = @genres.each do |genre|
  %header.clearfix
    %h1 = genre.name
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - genre.videos.each do |video|
      .video.col-md-2
        = link_to "", nil do
          %img(src="/tmp/#{['futurama', 'south_park', 'family_guy'].sample}.jpg")
